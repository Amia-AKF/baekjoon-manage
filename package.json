{
  "name": "baekjoon-manage",
  "publisher": "Amia",
  "displayName": "baekjoon-manage",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
     "configuration": {
      "title": "Baekjoon",
      "properties": {
        "baekjoon-manage.manageTags": {
          "type": "string",
          "default": "기타(직접 입력)",
          "description": "콤마(,)로 구분된 태그 목록 예: dfs, bfs, 재귀"
        }
      } 
    },
    "commands": [
      {
        "command": "extension.createBaekjoonTemplate.cpp",
        "title": "Baekjoon: Create C++ Folder"
      },
      {
        "command": "extension.createBaekjoonTemplate.py",
        "title": "Baekjoon: Create Python Folder"
      },
      {
        "command": "extension.BaekjoonTemplate",
        "title": "Baekjoon: Create Notion File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@notionhq/client": "^3.1.3",
    "axios": "^1.10.0",
    "dotenv": "^16.5.0"
  }
}
