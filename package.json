{
  "name": "baekjoon-manager-with-notion",
  "publisher": "Amia-bmwn",
  "displayName": "Baekjoon Problem Manager",
  "description": "백준 문제 자동 정리하고 Notion에 백업하는 익스텐션입니다.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Amia-AKF/baekjoon-manage"
  },
  "author": {
    "name": "Amia"
  },
  "bugs": {
    "url": "https://github.com/Amia-AKF/baekjoon-manage/issues"
  },
  "version": "1.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Baekjoon Problem Manager",
      "properties": {
        "baekjoon-manage.enableNotionFeature":{
          "type": "boolean",
          "default": true,
          "description": "노션 기능 활성화 여부",
          "order": 0
        },
        "baekjoon-manage.database_id": {
          "type": "string",
          "description": "노션 페이지 id",
          "order": 1
        },
        "baekjoon-manage.manageTags": {
          "type": "string",
          "default": "기타(직접 입력)",
          "description": "콤마(,)로 구분된 태그 목록 예: dfs, bfs, 재귀 //기타(직접 입력)은 필수입니다.",
          "order": 2
        }
      }
    },
    "commands": [
      {
        "command": "extension.createBaekjoonTemplate.cpp",
        "title": "Create C++ Folder",
        "category": "Baekjoon Manager"
      },
      {
        "command": "extension.createBaekjoonTemplate.py",
        "title": "Create Python Folder",
        "category": "Baekjoon Manager"
      },
      {
        "command": "extension.createNotionFromInput",
        "title": "Create Notion File From Input",
        "category": "Baekjoon Manager"
      },
      {
        "command": "extension.createNotionFromEditor",
        "title": "Create Notion File From Editor",
        "category": "Baekjoon Manager"
      },
      {
        "command": "extension.delNotionToken",
        "title": "Delete Notion Token",
        "category": "Baekjoon Manager"
      },
      {
        "command": "extension.changeNotionToken",
        "title": "Change Notion Token",
        "category": "Baekjoon Manager"
      },
      {
        "command": "extension.changeNotionDatabaseID",
        "title": "Change Notion DatabaseID",
        "category": "Baekjoon Manager"
      }
    ],
    "keybindings": [
      {
        "command": "extension.createBaekjoonTemplate.py",
        "key": "ctrl+alt+p"
      },
      {
        "command": "extension.createNotionFromEditor",
        "key": "ctrl+alt+n"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.createNotionFromInput",
          "when": "config.baekjoon-manage.enableNotionFeature"
        },
        {
          "command": "extension.createNotionFromEditor",
          "when": "config.baekjoon-manage.enableNotionFeature"
        },
        {
          "command": "extension.delNotionToken",
          "when": "config.baekjoon-manage.enableNotionFeature"
        },
        {
          "command": "extension.changeNotionToken",
          "when": "config.baekjoon-manage.enableNotionFeature"
        },
        {
          "command": "extension.changeNotionDatabaseID",
          "when": "config.baekjoon-manage.enableNotionFeature"
        }
  
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@notionhq/client": "^3.1.3",
    "axios": "^1.10.0",
    "dotenv": "^16.5.0"
  }
}
